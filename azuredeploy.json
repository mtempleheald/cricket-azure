{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]",
            "metadata": {
                "description": "Location for all resources."
            }
        },
        "StorageAccountType": {
            "type": "string",
            "defaultValue": "Standard_LRS",
            "allowedValues": [
                "Standard_LRS",
                "Standard_GRS",
                "Standard_ZRS",
                "Premium_LRS"
            ],
            "metadata": {
                "description": "Storage Account type"
            }
        }
    },
    "variables": {
        "functionapp_name": "[concat(resourceGroup().name, 'api')]",
        "functionapp_hostingplan_name": "[variables('functionapp_name')]",
        "functionapp_appInsightsName": "[variables('functionapp_name')]",
        "functionapp_storageaccount_name": "[concat(resourceGroup().name, 'apistorage')]",
        "functionapp_storageaccount_type": "Standard LRS",
        "functionapp_storageaccount_id": "[concat(resourceGroup().id,'/providers/','Microsoft.Storage/storageAccounts/', variables('functionapp_storageaccount_name'))]",        
        "static_storageaccount_name": "[concat(resourceGroup().name, 'uistorage')]"
    },
    "resources": [
        {
            "name": "[variables('functionapp_storageaccount_name')]",
            "type": "Microsoft.Storage/storageAccounts",
            "kind": "Storage",
            "apiVersion": "2018-07-01",
            "comments": "api_url https://docs.microsoft.com/en-us/azure/templates/microsoft.storage/2018-07-01/storageaccounts",
            "location": "[parameters('location')]",
            "tags": {},
            "sku": {
                "name": "[parameters('storageAccountType')]"
            }
        },
        {
            "name": "[variables('functionapp_hostingplan_name')]",
            "type": "Microsoft.Web/serverfarms",
            "kind": "functionapp",
            "apiVersion": "2018-11-01",
            "comments": "api_url https://docs.microsoft.com/en-us/azure/templates/microsoft.web/2018-02-01/serverfarms",
            "location": "[parameters('location')]",
            "tags": {},
            "sku": {
                "name": "Y1",
                "tier": "Dynamic",
                "size": "Y1",
                "family": "Y",
                "capacity": 0
            },
            "properties": {
                "name": "[variables('functionapp_hostingplan_name')]"
            }
        },
        {
            "name": "[variables('functionapp_name')]",
            "type": "Microsoft.Web/sites",
            "kind": "functionapp",
            "apiVersion": "2018-11-01",
            "comments": "api_url https://docs.microsoft.com/en-us/azure/templates/microsoft.web/2018-02-01/sites",
            "location": "[parameters('location')]",
            "tags": {},
            "properties": {
                "enabled": true,
                "hostNameSslStates": [
                    {}
                ],
                "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', variables('functionapp_hostingplan_name'))]",
                "siteConfig": {
                    "appSettings": [
                        {
                            "name": "AzureWebJobsStorage",
                            "value": "[Concat('DefaultEndpointsProtocol=https;AccountName=',variables('functionapp_storageaccount_name'),';AccountKey=',listKeys(resourceId('Microsoft.Storage/storageAccounts', variables('functionapp_storageaccount_name')), providers('Microsoft.Storage', 'storageAccounts').apiVersions[0]).keys[0].value)]"
                        },
                        {
                            "name": "AzureWebJobsDashboard",
                            "value": "[Concat('DefaultEndpointsProtocol=https;AccountName=',variables('functionapp_storageaccount_name'),';AccountKey=',listKeys(resourceId('Microsoft.Storage/storageAccounts', variables('functionapp_storageaccount_name')), providers('Microsoft.Storage', 'storageAccounts').apiVersions[0]).keys[0].value)]"
                        },
                        {
                            "name": "WEBSITE_CONTENTAZUREFILECONNECTIONSTRING",
                            "value": "[Concat('DefaultEndpointsProtocol=https;AccountName=',variables('functionapp_storageaccount_name'),';AccountKey=',listKeys(resourceId('Microsoft.Storage/storageAccounts', variables('functionapp_storageaccount_name')), providers('Microsoft.Storage', 'storageAccounts').apiVersions[0]).keys[0].value)]"
                        },
                        {
                            "name": "WEBSITE_CONTENTSHARE",
                            "value": "[variables('functionapp_name')]"
                        },
                        {
                            "name": "FUNCTIONS_EXTENSION_VERSION",
                            "value": "~1"
                        }
                    ]
                }
            },
            "dependsOn": [
                "[resourceId('Microsoft.Web/serverfarms', variables('functionapp_hostingplan_name'))]",
                "[resourceId('Microsoft.Storage/storageAccounts', variables('functionapp_storageaccount_name'))]"
            ]
        }
    ],
    "outputs": {
        "functionapp_name": {
            "type": "string",
            "value": "[variables('functionapp_name')]"
        },
        "functionapp_storageaccount_name": {
            "type": "string",
            "value": "functionapp_storageaccount_name"
        },
        "functionapp_storageaccount_keys": {
            "type": "object",
            "value": "[listKeys(variables('functionapp_storageaccount_name'), providers('Microsoft.Storage', 'storageAccounts').apiVersions[0])]"
        },
        "static_storageaccount_name": {
            "type": "string",
            "value": "static_storageaccount_name"
        }
    }
}