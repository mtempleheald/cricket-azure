            "type": "Microsoft.Insights/components",
            "kind": "web",
            "apiVersion": "2015-05-01",
            "comments": "api_url https://docs.microsoft.com/en-us/azure/templates/microsoft.insights/2015-05-01/components",
            "location": "[parameters('Location')]",
            "tags": {},
            "scale": null,
            "properties": {
