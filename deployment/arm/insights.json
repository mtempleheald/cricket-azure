{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "Location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]",
            "metadata": {
                "description": "Location for all resources."
            }
        },
        "Name": {
            "type": "string"
        },
        "FunctionAppName": {
            "type": "string"
        },
        "responseTime": {
            "type": "int",
            "defaultValue": 2,
            "minValue": 1,
            "metadata": {
              "description": "Enter response time threshold in seconds."
            }
      }
    },
    "variables": {},
    "resources": [
        {
            "name": "[parameters('Name')]",
            "type": "Microsoft.Insights/components",
            "kind": "web",
            "apiVersion": "2014-04-01",
            "comments": "api_url https://docs.microsoft.com/en-us/azure/templates/microsoft.insights/2015-05-01/components",
            "location": "[parameters('Location')]",
            "tags": {},
            "scale": null,
            "properties": {
                "Application_Type": "web",
                "ApplicationId": "[parameters('Name')]"
            },
            "dependsOn": []
        },
        {
            "type": "microsoft.insights/alertrules",
            "name": "[concat('Failure Anomalies - ', parameters('FunctionAppName'))]",
            "apiVersion": "2014-04-01",
            "location": "[parameters('Location')]",
            "tags": {
                "[concat('hidden-link:', resourceId('Microsoft.Insights/components', parameters('FunctionAppName')))]": "Resource"
            },
            "scale": null,
            "properties": {
                "name": "[concat('Failure Anomalies - ', parameters('FunctionAppName'))]",
                "description": "Response time alert",
                "isEnabled": true,
                "condition": {
                    "odata.type": "Microsoft.Azure.Management.Insights.Models.ThresholdRuleCondition",
                    "dataSource": {
                        "$type": "Microsoft.WindowsAzure.Management.Monitoring.Alerts.Models.RuleMetricDataSource, Microsoft.WindowsAzure.Management.Mon.Client",
                        "odata.type": "Microsoft.Azure.Management.Insights.Models.RuleMetricDataSource",
                        "resourceUri": "[resourceId('microsoft.insights/components', parameters('Name'))]",
                        "metricName": "request.duration"
                    },
                    "threshold": "[parameters('responseTime')]",
                    "windowSize": "PT5M"
                },
                "action": {
                    "$type": "Microsoft.WindowsAzure.Management.Monitoring.Alerts.Models.RuleEmailAction, Microsoft.WindowsAzure.Management.Mon.Client",
                    "odata.type": "Microsoft.Azure.Management.Insights.Models.RuleEmailAction",
                    "sendToServiceOwners": true,
                    "customEmails": []
                }
            },
            "dependsOn": [
                "[resourceId('microsoft.insights/components', parameters('Name'))]"
            ]
        }
    ],
    "outputs": {
        "Key": {
            "type": "string",
            "value": "[reference(resourceId('Microsoft.Insights/components/', parameters('Name')), providers('Microsoft.Insights', 'components').apiVersions[0]).InstrumentationKey]"
        }
    }
}