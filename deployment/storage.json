{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "Location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]",
            "metadata": {
                "description": "Location for all resources."
            }
        },
        "Type": {
            "type": "string",
            "defaultValue": "Standard_LRS",
            "allowedValues": [
                "Standard_LRS",
                "Standard_GRS",
                "Standard_ZRS",
                "Premium_LRS"
            ],
            "metadata": {
                "description": "Storage Account type"
            }
        },
        "Kind": {
            "type": "string",
            "defaultValue": "Storage",
            "metadata": {
                "description": "Storage Account kind"
            }
        },
        "Name": {
            "type": "string"
        },
        "Purpose": {
            "type": "string",
            "defaultValue": ""
        }
    },
    "variables": {},
    "resources": [
        {
            "name": "[parameters('Name')]",
            "type": "Microsoft.Storage/storageAccounts",
            "kind": "[parameters('Kind')]",
            "apiVersion": "2018-07-01",
            "comments": "api_url https://docs.microsoft.com/en-us/azure/templates/microsoft.storage/2018-07-01/storageaccounts",
            "location": "[parameters('Location')]",
            "tags": {
                "purpose": "[parameters('Purpose')]"
            },
            "sku": {
                "name": "[parameters('Type')]"
            },
            "properties": {
                "encryption": {
                    "keySource": "Microsoft.Storage",
                    "services": {
                        "blob": {
                            "enabled": true
                        }
                    }
                }
            }
        }
    ],
    "outputs": {
        "Key": {
            "type": "string",
            "value": "[listKeys(parameters('Name'), providers('Microsoft.Storage', 'storageAccounts').apiVersions[0]).keys[0].value]"
        }
    }
}